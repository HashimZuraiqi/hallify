rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // HALLS
    match /halls/{hallId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.organizerId;
    }

    // VISIT REQUESTS - Updated for organizer approval
    match /visitRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.customerId;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.organizerId || request.auth.uid == resource.data.customerId);
      allow delete: if request.auth != null && request.auth.uid == resource.data.organizerId;
    }

    // AVAILABILITY SLOTS - NEW FOR BOOKING SYSTEM
    match /availabilitySlots/{slotId} {
      // Anyone can read slots
      allow read: if request.auth != null;
      
      // Only hall organizer can create/update/delete slots
      allow create, update, delete: if request.auth != null &&
        request.auth.uid == getHallOrganizerId(request.resource.data.hallId);
    }

    // HALL SLOTS - ATOMIC SLOT LOCKING (RACE-CONDITION SAFE)
    match /hallSlots/{slotId} {
      // Anyone can read to check availability
      allow read: if request.auth != null;
      
      // Only authenticated users can create (during booking)
      allow create: if request.auth != null;
      
      // Only organizer can update/delete
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.organizerId;
    }

    // NOTIFICATIONS
    match /notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.to;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.to;
    }

    // CONVERSATIONS
    match /conversations/{conversationId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // MESSAGES
    match /messages/{messageId} {
      allow read, create: if request.auth != null;
    }

    // HELPER FUNCTION
    function getHallOrganizerId(hallId) {
      return get(/databases/$(database)/documents/halls/$(hallId)).data.organizerId;
    }

    // DEFAULT DENY
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
